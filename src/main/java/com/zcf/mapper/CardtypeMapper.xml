<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zcf.mapper.CardtypeMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.zcf.pojo.Cardtype">
        <id column="id" property="id" />
        <result column="value" property="value" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, value
    </sql>

    <select id="getCard_type" resultType="String">
        SELECT `value` FROM cardtype  WHERE id >= (SELECT FLOOR( MAX(id) * RAND()) FROM cardtype ) ORDER BY id LIMIT 1
    </select>

</mapper>
